{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "image:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:allow-open",
    "fs:default",
    "fs:allow-create",
    "http:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-confirm",
    {
      "identifier": "fs:default",
      "allow": [{"path": "$CONFIG/**"}, {"path": "$APPDATA/**"}]
    },
    {
      "identifier": "fs:read-dirs",
      "allow": [{"path": "$CONFIG/**"}, {"path": "$APPDATA/**"}]
    },
    {
      "identifier": "fs:allow-copy-file",
      "allow": [{"path": "$CONFIG/**"}, {"path": "$APPDATA/**"}]
    },
    {
      "identifier": "fs:write-files",
      "allow": [{"path": "$CONFIG/**"}]
    },
    {
      "identifier": "http:allow-fetch",
        "allow": ["http://**", "https://archive.biliimg.com/*","https://*.hdslb.com/*"]
    }
  ],
  "capabilities": [

  ]
}
